<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sales Management Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="/" class="sidebar-brand">
                <i class="bi bi-shield-lock-fill"></i> ADMIN
            </a>
        </div>
        
        <ul class="sidebar-menu p-0">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                   asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Tổng quan
                </a>
            </li>

            <li class="px-3 pt-3 pb-1 text-uppercase small text-muted font-weight-bold">Quản lý</li>

            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" ? "active" : "")" 
                   asp-area="Admin" asp-controller="Employees" asp-action="Index">
                    <i class="bi bi-people-fill"></i> Nhân viên
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Categories" ? "active" : "")" 
                   asp-area="Admin" asp-controller="Categories" asp-action="Index">
                    <i class="bi bi-grid-fill"></i> Danh mục
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Discounts" ? "active" : "")" 
                   asp-area="Admin" asp-controller="Discounts" asp-action="Index">
                    <i class="bi bi-tags-fill"></i> Mã giảm giá
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "VipPackages" ? "active" : "")" 
                   asp-area="Admin" asp-controller="VipPackages" asp-action="Index">
                    <i class="bi bi-gem"></i> Gói VIP
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "WalletManagement" ? "active" : "")" 
                   asp-area="Admin" asp-controller="WalletManagement" asp-action="Index">
                    <i class="bi bi-wallet-fill"></i> Nạp xu
                </a>
            </li>

            <li class="px-3 pt-3 pb-1 text-uppercase small text-muted font-weight-bold">Hệ thống</li>

             <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")" 
                   asp-area="Admin" asp-controller="Users" asp-action="Index">
                    <i class="bi bi-person-badge"></i> Quản lý người dùng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#reportsSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                     <i class="bi bi-bar-chart-line-fill"></i> Báo cáo & Phân tích <i class="bi bi-chevron-down ms-auto" style="font-size: 0.8em;"></i>
                </a>
                <div class="collapse @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "show" : "")" id="reportsSubmenu">
                    <ul class="nav flex-column ms-3">
                         <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-graph-up-arrow me-2"></i> Doanh thu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" && ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Reports" asp-action="Products">
                                <i class="bi bi-box-seam me-2"></i> Sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" && ViewContext.RouteData.Values["Action"]?.ToString() == "Financials" ? "active" : "")" 
                               asp-area="Admin" asp-controller="Reports" asp-action="Financials">
                                <i class="bi bi-cash-coin me-2"></i> Tài chính
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")" 
                   asp-area="Admin" asp-controller="Settings" asp-action="Index">
                    <i class="bi bi-gear-fill"></i> Cài đặt
                </a>
            </li>
        </ul>

        <div class="sidebar-footer">
            <a asp-all-route-data="@(new Dictionary<string, string> { { "area", "" } })" asp-controller="Home" asp-action="Index" class="nav-link text-danger">
                <i class="bi bi-box-arrow-left"></i> Về trang chủ
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content" id="content">
        <!-- Topbar -->
        <div class="top-bar">
            <button class="btn btn-outline-secondary d-md-none" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <h4 class="m-0">@ViewData["Title"]</h4>
            
            <div class="user-profile dropdown">
                <div class="text-end d-none d-sm-block me-2">
                    <small class="d-block text-secondary">Xin chào,</small>
                    <span class="fw-bold">@User.Identity?.Name</span>
                </div>
                <div class="user-avatar" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person"></i>
                </div>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Hồ sơ</a></li>
                    <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item text-danger">Đăng xuất</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Render Body -->
        <div class="container-fluid p-0">
             @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Included Chart.js for dashboard -->
    
    <script>
        // Sidebar Toggle Script
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
