@model Sales_Management.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col-12">
        <h4 class="fw-bold">Chỉnh sửa thông tin người dùng</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Danh sách người dùng</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Username</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card-modern">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="PasswordHash" />
                    <input type="hidden" asp-for="CreatedDate" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label text-muted small fw-bold text-uppercase">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control bg-light" readonly />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Role" class="form-label text-muted small fw-bold text-uppercase">Vai trò</label>
                            <select asp-for="Role" class="form-select">
                                <option value="Customer">Khách hàng</option>
                                <option value="Sales">Sales</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>

                        <div class="col-12 mt-4">
                            <h6 class="fw-bold border-bottom pb-2">Thông tin cá nhân</h6>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label">Họ và tên</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Trạng thái</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive" id="flexSwitchCheckChecked">
                                <label class="form-check-label" for="flexSwitchCheckChecked">Đang hoạt động</label>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <h6 class="fw-bold border-bottom pb-2">Đổi mật khẩu <small class="text-muted fw-normal">(Để trống nếu không muốn đổi)</small></h6>
                        </div>

                        <div class="col-md-6">
                            <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                            <input type="password" name="NewPassword" class="form-control" placeholder=" ••••••••" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5">
                        <a asp-action="Index" class="btn btn-light">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-4">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
