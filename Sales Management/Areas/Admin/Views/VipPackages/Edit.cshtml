@model Sales_Management.Models.VipPackage

@{
    ViewData["Title"] = "Chỉnh sửa gói VIP";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-modern">
            <h3 class="fw-bold text-dark mb-4">Chỉnh sửa thông tin gói</h3>
            
            <form asp-action="Edit">
                <input type="hidden" asp-for="VipPackageId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6 ml-2">
                        <label asp-for="Name" class="form-label fw-bold">Tên gói</label>
                        <input asp-for="Name" class="form-control" placeholder="Ví dụ: Khách hàng thân thiết" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 ml-2">
                         <label asp-for="Tag" class="form-label fw-bold">Nhãn (Tag)</label>
                        <input asp-for="Tag" class="form-control" placeholder="Ví dụ: Premium, Best Value" />
                        <span asp-validation-for="Tag" class="text-danger"></span>
                    </div>

                    <div class="col-12 ml-2">
                        <label asp-for="Description" class="form-label fw-bold">Mô tả ngắn</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 ml-2">
                        <label asp-for="Price" class="form-label fw-bold">Giá gói (VNĐ)</label>
                        <input asp-for="Price" class="form-control" type="number" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 ml-2">
                        <label asp-for="DurationMonth" class="form-label fw-bold">Thời hạn (Tháng)</label>
                        <input asp-for="DurationMonth" class="form-control" type="number" />
                        <span asp-validation-for="DurationMonth" class="text-danger"></span>
                    </div>

                     <div class="col-md-6 ml-2">
                         <label asp-for="DiscountPercent" class="form-label fw-bold">Mức giảm giá (%)</label>
                         <input asp-for="DiscountPercent" class="form-control" type="number" step="0.1" />
                         <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 ml-2">
                         <label asp-for="ColorCode" class="form-label fw-bold">Màu sắc</label>
                         <select asp-for="ColorCode" class="form-select">
                             <option value="primary" class="text-primary">Xanh dương (Primary)</option>
                             <option value="success" class="text-success">Xanh lá (Success)</option>
                             <option value="warning" class="text-warning">Vàng (Warning)</option>
                             <option value="danger" class="text-danger">Đỏ (Danger)</option>
                             <option value="info" class="text-info">Xanh nhạt (Info)</option>
                             <option value="dark" class="text-dark">Đen (Dark)</option>
                         </select>
                         <span asp-validation-for="ColorCode" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 ml-2">
                        <label asp-for="Icon" class="form-label fw-bold">Biểu tượng (Bootstrap Icon)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-box"></i></span>
                            <input asp-for="Icon" class="form-control" placeholder="bi-star-fill" />
                        </div>
                        <small class="text-muted">Nhập tên class icon từ Bootstrap Icons (VD: bi-star-fill)</small>
                         <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>

                     <div class="col-md-6 ml-2">
                        <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                         <select asp-for="Status" class="form-select">
                             <option value="Active">Hoạt động</option>
                             <option value="Inactive">Tạm ẩn</option>
                         </select>
                         <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-12 ml-2">
                        <label asp-for="Features" class="form-label fw-bold">Quyền lợi (Mỗi quyền lợi 1 dòng)</label>
                        <textarea asp-for="Features" class="form-control" rows="5" placeholder="- Miễn phí vận chuyển&#10;- Giảm 10% đơn hàng"></textarea>
                        <span asp-validation-for="Features" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Hủy</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
