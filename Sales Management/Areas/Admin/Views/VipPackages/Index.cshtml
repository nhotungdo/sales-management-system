@model IEnumerable<Sales_Management.Models.VipPackage>

@{
    ViewData["Title"] = "Gói VIP";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-4">
    <div>
        <h3 class="fw-bold text-dark">Quản lý gói VIP</h3>
        <p class="text-muted mb-0">Thiết lập các cấp độ thành viên và ưu đãi</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i> Thêm gói mới
        </a>
    </div>
</div>

<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            var color = item.ColorCode ?? "secondary";
            var features = item.Features?.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries) ?? Array.Empty<string>();

            <div class="col-md-4">
                <div class="card-modern h-100 position-relative border-top border-5 border-@color">
                     @if (item.Status != "Active")
                    {
                        <div class="position-absolute top-0 end-0 m-3">
                             <span class="badge bg-secondary text-white rounded-pill">Inactive</span>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                             <span class="badge bg-light text-@color rounded-pill mb-2">@(item.Tag ?? "Package")</span>
                            <h4 class="fw-bold mb-0">@item.Name</h4>
                        </div>
                        <div class="stat-icon-wrapper bg-light-@color">
                            <i class="@item.Icon"></i>
                        </div>
                    </div>
                    <p class="text-muted small mb-4">@item.Description</p>
                    
                    <div class="mb-4">
                        @if (item.Price == 0)
                        {
                            <h2 class="fw-bold text-dark">0 VNĐ <span class="fs-6 text-muted fw-normal">/ @(item.DurationMonth == 12 ? "năm" : item.DurationMonth + " tháng")</span></h2>
                        }
                        else
                        {
                            <h2 class="fw-bold text-dark">@item.Price.ToString("#,##0") VNĐ <span class="fs-6 text-muted fw-normal">/ @(item.DurationMonth == 12 ? "năm" : item.DurationMonth + " tháng")</span></h2>
                        }
                    </div>
                    
                    <ul class="list-unstyled mb-4">
                         @foreach (var feature in features)
                        {
                            <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> @feature</li>
                        }
                    </ul>

                    <button class="btn btn-outline-@color w-100 rounded-pill">Chỉnh sửa</button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center py-5">
            <p class="text-muted">Chưa có gói VIP nào. Vui lòng thêm gói mới.</p>
        </div>
    }
</div>
