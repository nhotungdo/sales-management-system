@model Sales_Management.Models.Promotion

@{
    ViewData["Title"] = "Chỉnh sửa mã giảm giá";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="fw-bold text-dark">Chỉnh sửa mã giảm giá</h3>
                <p class="text-muted mb-0">Cập nhật thông tin chương trình khuyến mãi</p>
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                <i class="bi bi-arrow-left me-2"></i> Trở về
            </a>
        </div>

        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="PromotionId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Code" class="form-label fw-semibold">Mã giảm giá</label>
                            <input asp-for="Code" class="form-control rounded-3" readonly />
                            <span asp-validation-for="Code" class="text-danger"></span>
                            <small class="text-muted">Không thể thay đổi mã khuyến mãi</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label fw-semibold">Trạng thái</label>
                            <select asp-for="Status" class="form-select rounded-3">
                                <option value="Active">Hoạt động</option>
                                <option value="Expired">Hết hạn</option>
                                <option value="Disabled">Tạm ngưng</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DiscountType" class="form-label fw-semibold">Loại giảm giá</label>
                            <select asp-for="DiscountType" class="form-select rounded-3">
                                <option value="Percent">Phần trăm (%)</option>
                                <option value="Amount">Số tiền cố định (VND)</option>
                            </select>
                            <span asp-validation-for="DiscountType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Value" class="form-label fw-semibold">Giá trị giảm</label>
                            <input asp-for="Value" class="form-control rounded-3" type="number" step="0.01" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label fw-semibold">Ngày bắt đầu</label>
                            <input asp-for="StartDate" class="form-control rounded-3" type="datetime-local" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label fw-semibold">Ngày kết thúc</label>
                            <input asp-for="EndDate" class="form-control rounded-3" type="datetime-local" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="MinOrderValue" class="form-label fw-semibold">Giá trị đơn hàng tối thiểu</label>
                            <input asp-for="MinOrderValue" class="form-control rounded-3" type="number" step="0.01" />
                            <span asp-validation-for="MinOrderValue" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MaxDiscountAmount" class="form-label fw-semibold">Giảm tối đa</label>
                            <input asp-for="MaxDiscountAmount" class="form-control rounded-3" type="number" step="0.01" />
                            <span asp-validation-for="MaxDiscountAmount" class="text-danger"></span>
                            <small class="text-muted d-block mt-1">Chỉ áp dụng cho loại giảm giá theo %</small>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary rounded-pill px-4">
                            <i class="bi bi-check-lg me-2"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
