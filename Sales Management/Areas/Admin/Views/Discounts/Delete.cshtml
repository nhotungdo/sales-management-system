@model Sales_Management.Models.Promotion

@{
    ViewData["Title"] = "Xóa mã giảm giá";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-danger">Xóa mã giảm giá</h3>
            <p class="text-muted">Bạn có chắc chắn muốn xóa mã giảm giá này không?</p>
        </div>

        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-danger-subtle rounded-circle mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-trash fs-1 text-danger"></i>
                    </div>
                    <h4 class="fw-bold">@Model.Code</h4>
                    <p class="text-muted">
                        Loại: @Model.DiscountType <br />
                        Giá trị: @Model.Value.ToString("F2") <br />
                        Trạng thái: @Model.Status
                    </p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="PromotionId" />
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                        <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="bi bi-trash me-2"></i> Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
