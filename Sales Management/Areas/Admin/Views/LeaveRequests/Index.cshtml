@model IEnumerable<Sales_Management.Models.LeaveRequest>
@{
    ViewData["Title"] = "Leave Requests";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Leave Requests Management</h2>
    </div>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Employee</th>
                            <th>Dates</th>
                            <th>Type</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3 bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold">
                                            @item.Employee.User.FullName.Substring(0,1)
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@item.Employee.User.FullName</h6>
                                            <small class="text-muted">@item.Employee.Department</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-medium">@item.StartDate.ToString("dd/MM/yyyy")</span>
                                        <small class="text-muted">to @item.EndDate.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </td>
                                <td><span class="badge bg-info bg-opacity-10 text-info">@item.LeaveType</span></td>
                                <td class="text-muted text-truncate" style="max-width: 200px;" title="@item.Reason">@item.Reason</td>
                                <td>
                                    @if(item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if(item.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (item.Status == "Pending")
                                    {
                                        <form asp-action="Approve" asp-route-id="@item.LeaveRequestId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">Approve</button>
                                        </form>
                                        <form asp-action="Reject" asp-route-id="@item.LeaveRequestId" method="post" class="d-inline ms-1">
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3">Reject</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
