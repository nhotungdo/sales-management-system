@model IEnumerable<Sales_Management.Models.Payroll>
@{
    ViewData["Title"] = "Payroll Management";
    int month = ViewBag.Month;
    int year = ViewBag.Year;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold">Payroll Management</h2>
            <p class="text-muted mb-0">Manage and generate monthly salaries</p>
        </div>
        
        <form asp-action="Generate" method="post" class="d-flex gap-2 align-items-center card p-2 shadow-sm border-0 d-inline-flex flex-row">
            <input type="hidden" name="month" value="@month" />
            <input type="hidden" name="year" value="@year" />
            <span class="fw-bold text-secondary">Period: @month/@year</span>
            <button type="submit" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-gear-fill me-2"></i>Generate Payroll
            </button>
        </form>
    </div>
    
    <!-- Filter -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-auto">
                    <label class="form-label fw-bold">Month</label>
                    <input type="number" name="month" class="form-control" value="@month" min="1" max="12">
                </div>
                <div class="col-auto">
                    <label class="form-label fw-bold">Year</label>
                    <input type="number" name="year" class="form-control" value="@year" min="2020" max="2030">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Employee</th>
                            <th>Base Salary</th>
                            <th>Allowances</th>
                            <th>Overtime</th>
                            <th>Deductions</th>
                            <th>Tax</th>
                            <th>Net Salary</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">@item.Employee.User.FullName</div>
                                    <small class="text-muted">@item.Employee.Position</small>
                                </td>
                                <td>@item.BaseSalary.ToString("N0")</td>
                                <td class="text-success">+@item.TotalAllowances.ToString("N0")</td>
                                <td class="text-success">+@item.Bonus.ToString("N0")</td>
                                <td class="text-danger">-@item.TotalDeductions.ToString("N0")</td>
                                <td class="text-danger">-@item.TaxAmount.ToString("N0")</td>
                                <td class="fw-bold text-primary">@item.NetSalary.ToString("N0")</td>
                                <td>
                                    <span class="badge bg-@(item.Status == "Paid" ? "success" : "warning") rounded-pill">@item.Status</span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.PayrollId" class="btn btn-sm btn-outline-primary rounded-pill">View Slip</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="text-muted">No payroll records found for this period.</div>
                </div>
            }
        </div>
    </div>
</div>
