@{
    ViewData["Title"] = "Tổng quan bán hàng";
    Layout = "_SaleLayout";
    
    var recentOrders = ViewBag.RecentOrders as List<Sales_Management.Models.Order>;
    var topProducts = ViewBag.TopProducts as dynamic; 
}

<div class="row g-4 mb-4">
    <!-- Stats Cards -->
    <div class="col-md-4">
        <div class="stats-card">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="card-icon bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-currency-dollar"></i>
                </div>
                <span class="badge bg-success bg-opacity-10 text-success">+12%</span>
            </div>
            <h6 class="text-muted mb-1">Doanh thu tổng</h6>
            <h3 class="fw-bold mb-0">@ViewBag.TotalRevenue?.ToString("N0") ₫</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stats-card">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="card-icon bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-bag-check"></i>
                </div>
                <span class="badge bg-warning bg-opacity-10 text-warning">Hôm nay</span>
            </div>
            <h6 class="text-muted mb-1">Đơn hàng mới</h6>
            <h3 class="fw-bold mb-0">@ViewBag.OrdersToday</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stats-card">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="card-icon bg-danger bg-opacity-10 text-danger">
                    <i class="bi bi-box-seam"></i>
                </div>
                @if (ViewBag.LowStockCount > 0)
                {
                    <span class="badge bg-danger">Cảnh báo</span>
                }
            </div>
            <h6 class="text-muted mb-1">Sản phẩm sắp hết</h6>
            <h3 class="fw-bold mb-0">@ViewBag.LowStockCount</h3>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Chart Section -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Đơn hàng gần đây</h5>
                    <a asp-area="Sale" asp-controller="Order" asp-action="Index" class="btn btn-sm btn-outline-primary rounded-pill px-3">Xem tất cả</a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (recentOrders != null && recentOrders.Any())
                            {
                                foreach (var order in recentOrders)
                                {
                                    <tr>
                                        <td class="ps-4"><span class="fw-bold">#@order.OrderId</span></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                    @order.Customer?.FullName?.Substring(0,1)
                                                </div>
                                                <span>@order.Customer?.FullName</span>
                                            </div>
                                        </td>
                                        <td class="fw-bold">@order.TotalAmount?.ToString("N0") ₫</td>
                                        <td>
                                            @{
                                                var badgeClass = order.Status switch
                                                {
                                                    "Completed" => "bg-success",
                                                    "Paid" => "bg-success",
                                                    "Pending" => "bg-warning",
                                                    "Cancelled" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badgeClass bg-opacity-75 rounded-pill">@order.Status</span>
                                        </td>
                                        <td class="text-muted small">@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">Chưa có đơn hàng nào</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Products -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="fw-bold mb-0">Sản phẩm bán chạy</h5>
            </div>
            <div class="card-body">
                @if (topProducts != null)
                {
                    foreach (var item in topProducts)
                    {
                        <div class="d-flex align-items-center mb-4">
                           <div class="me-3" style="width: 48px; height: 48px; position: relative;">
                                @* Assuming first image or placeholder *@
                                <img src="/images/product-placeholder.png" onerror="this.src='https://placehold.co/48'" class="rounded" style="width: 100%; height: 100%; object-fit: cover;" />
                           </div>
                           <div class="flex-grow-1">
                               <h6 class="mb-0 text-truncate" style="max-width: 150px;">@item.Product.Name</h6>
                               <small class="text-muted">Đã bán: @item.TotalSold</small>
                           </div>
                           <div class="text-end">
                               <span class="fw-bold d-block">@(((decimal)item.Revenue).ToString("N0")) ₫</span>
                           </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
