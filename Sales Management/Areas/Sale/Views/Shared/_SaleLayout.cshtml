@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sale Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --sidebar-width: 250px;
            --header-height: 70px;
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --bg-light: #f8f9fa;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-light);
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #ffffff;
            z-index: 1000;
            transition: all 0.3s;
            box-shadow: 2px 0 10px rgba(0,0,0,0.05);
        }

        .sidebar-header {
            height: var(--header-height);
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            border-bottom: 1px solid #eee;
        }

        .brand-logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar-menu {
            padding: 1.5rem 1rem;
        }

        .nav-item-link {
            display: flex;
            align-items: center;
            padding: 0.8rem 1rem;
            color: #6c757d;
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 0.5rem;
            transition: all 0.2s;
            font-weight: 500;
        }

        .nav-item-link:hover, .nav-item-link.active {
            background-color: rgba(67, 97, 238, 0.1);
            color: var(--primary-color);
        }

        .nav-item-link i {
            margin-right: 12px;
            font-size: 1.1rem;
        }

        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            padding-top: var(--header-height);
            min-height: 100vh;
            transition: all 0.3s;
        }

        /* Header */
        .top-header {
            height: var(--header-height);
            position: fixed;
            top: 0;
            right: 0;
            left: var(--sidebar-width);
            background: rgba(255,255,255,0.9);
            backdrop-filter: blur(10px);
            z-index: 900;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 2rem;
            border-bottom: 1px solid #eee;
            transition: all 0.3s;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: calc(var(--sidebar-width) * -1);
            }
            .sidebar.active {
                margin-left: 0;
            }
            .main-content {
                margin-left: 0;
            }
            .top-header {
                left: 0;
            }
        }
        
        /* Cards */
        .stats-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 2px 12px rgba(0,0,0,0.03);
            border: none;
            transition: transform 0.2s;
        }
        
        .stats-card:hover {
            transform: translateY(-5px);
        }

        .card-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body data-theme="blue">

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="/" class="brand-logo">
                <i class="bi bi-box-seam"></i> Sale Panel
            </a>
        </div>
        <div class="sidebar-menu">
            <a asp-area="Sale" asp-controller="Dashboard" asp-action="Index" class="nav-item-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                <i class="bi bi-grid-1x2-fill"></i> Tổng quan
            </a>
            <a asp-area="Sale" asp-controller="Product" asp-action="Index" class="nav-item-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" ? "active" : "")">
                <i class="bi bi-box-seam"></i> Sản phẩm
            </a>
            <a asp-area="Sale" asp-controller="Order" asp-action="Index" class="nav-item-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Order" ? "active" : "")">
                <i class="bi bi-cart3"></i> Đơn hàng
            </a>
            <a asp-area="Sale" asp-controller="Customer" asp-action="Index" class="nav-item-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customer" ? "active" : "")">
                <i class="bi bi-people"></i> Khách hàng
            </a>
             <a asp-area="Sale" asp-controller="Invoices" asp-action="Index" class="nav-item-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Invoices" ? "active" : "")">
                <i class="bi bi-receipt"></i> Hóa đơn
            </a>
            <div class="border-top my-3"></div>
            <a asp-controller="Home" asp-action="Index" asp-area="" class="nav-item-link">
                <i class="bi bi-arrow-left-circle"></i> Về trang chủ
            </a>
        </div>
    </div>

    <!-- Header -->
    <div class="top-header">
        <button class="btn btn-link text-dark d-md-none" id="sidebarToggle">
            <i class="bi bi-list fs-4"></i>
        </button>
        <h5 class="m-0 fw-bold text-secondary">@ViewData["Title"]</h5>
        
        <div class="d-flex align-items-center gap-3">
             <div class="dropdown">
                <div class="user-profile" data-bs-toggle="dropdown">
                    <div class="text-end me-2 d-none d-sm-block">
                        <div class="fw-bold small">@User.Identity?.Name</div>
                        <div class="text-muted small" style="font-size: 0.8rem">Sales Manager</div>
                    </div>
                    <div class="user-avatar">
                        @User.Identity?.Name?.Substring(0,1).ToUpper()
                    </div>
                </div>
                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg" style="border-radius: 12px; min-width: 220px;">
                    <li><h6 class="dropdown-header">@User.FindFirst("FullName")?.Value</h6></li>
                    <li><span class="dropdown-item-text small text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Hồ sơ</a></li>
                    @if (!User.IsInRole("Admin") && !User.IsInRole("Sales"))
                    {
                        <li><a class="dropdown-item" asp-area="" asp-controller="Wallet" asp-action="Index"><i class="bi bi-wallet2 me-2"></i> Ví của tôi</a></li>
                    }
                     <li>
                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#timekeepingHistoryModal" onclick="loadTimekeepingHistory()">
                            <i class="bi bi-clock-history me-2"></i> Lịch sử chấm công
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                     <li>
                        <button type="button" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#logoutModal">
                            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div id="attendance-alert-container"></div>
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>
    
     <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Kết thúc làm việc</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
              <div class="modal-body">
                <p>Vui lòng nhập lý do đăng xuất (bắt buộc nếu không phải hết ca):</p>
                <div class="mb-3">
                  <label for="logoutReason" class="form-label">Lý do / Ghi chú</label>
                  <textarea class="form-control" id="logoutReason" name="reason" rows="3" placeholder="Ví dụ: Hết ca làm, Có việc riêng..."></textarea>
                </div>
                <!-- Requirement: "if they log out without providing a reason, automatically record it as check-out" -->
                <div class="alert alert-info small">
                   <i class="bi bi-info-circle"></i> Nếu để trống, hệ thống sẽ ghi nhận trạng thái là "Check-out".
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-danger">Đăng xuất & Check-out</button>
              </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Timekeeping History Modal -->
    <div class="modal fade" id="timekeepingHistoryModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Lịch sử chấm công</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div id="timekeepingSummary" class="mb-3 p-3 bg-danger-subtle text-danger rounded fw-bold border border-danger d-none"></div>
            <div id="timekeepingList">
                Đang tải dữ liệu...
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
          </div>
        </div>
      </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
        });
        
        async function checkAttendanceSummary() {
             try {
                const response = await fetch('/api/sales/timekeeping/summary');
                if (!response.ok) return;
                const data = await response.json();
                
                // Show Banner if late today
                if (data.isLateToday) {
                    const container = document.getElementById('attendance-alert-container');
                    if(container) {
                        container.innerHTML = `
                        <div class="alert alert-warning alert-dismissible fade show m-3 shadow-sm border-warning" role="alert">
                             <h5 class="alert-heading fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i> Cảnh báo đi trễ!</h5>
                             <p class="mb-0">Bạn đã đến muộn <strong>${data.minutesLateToday} phút</strong> hôm nay.</p>
                             ${data.minutesLateToday > 10 ? '<hr><p class="mb-0 text-danger fw-bold">Khoản phạt dự kiến: 20,000 VND</p>' : ''}
                             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>`;
                    }
                }

                // Store summary for modal access
                window.attendanceSummary = data;
            } catch (e) { console.error(e); }
        }
        
        document.addEventListener('DOMContentLoaded', checkAttendanceSummary);
        
        async function loadTimekeepingHistory() {
            const list = document.getElementById('timekeepingList');
            const summaryDiv = document.getElementById('timekeepingSummary');
            
            list.innerHTML = '<div class="text-center py-3"><div class="spinner-border" role="status"></div></div>';
            
            // Try to refresh summary if needed, or use cached
            if (!window.attendanceSummary) await checkAttendanceSummary();
            if (window.attendanceSummary) {
                const s = window.attendanceSummary;
                summaryDiv.innerHTML = `<i class="bi bi-wallet2 me-2"></i> Tổng phạt đi trễ tháng này: ${s.totalDeduction.toLocaleString('vi-VN')} VND`;
                summaryDiv.classList.remove('d-none');
            }

            try {
                const response = await fetch('/api/sales/timekeeping/my-history');
                if (!response.ok) throw new Error('Failed to load');
                const data = await response.json();
                
                if (data.length === 0) {
                    list.innerHTML = '<p class="text-center text-muted py-3">Chưa có dữ liệu chấm công.</p>';
                    return;
                }
                
                let html = '<div class="table-responsive"><table class="table table-sm table-hover align-middle">';
                html += '<thead class="table-light"><tr><th>Ngày</th><th>Vào</th><th>Ra</th><th>Muộn (phút)</th><th>Phạt</th><th>Trạng thái</th></tr></thead><tbody>';
                
                data.forEach(item => {
                    const date = new Date(item.date).toLocaleDateString('vi-VN');
                    const checkIn = item.checkInTime ? new Date(item.checkInTime).toLocaleTimeString('vi-VN', {hour: '2-digit', minute:'2-digit'}) : '-';
                    const checkOut = item.checkOutTime ? new Date(item.checkOutTime).toLocaleTimeString('vi-VN', {hour: '2-digit', minute:'2-digit'}) : '-';
                    const minutesLate = item.minutesLate > 0 ? `<span class="text-danger fw-bold">${item.minutesLate}</span>` : '0';
                    const deduction = item.deduction > 0 ? `<span class="text-danger fw-bold">${item.deduction.toLocaleString()}</span>` : '0';
                    const notes = item.notes ? `<div class="small text-muted" style="font-size:0.8em">${item.notes}</div>` : '';
                    
                    let statusBadge = '';
                    if(item.status && item.status.includes('Late')) statusBadge = `<span class="badge bg-warning text-dark">${item.status}</span>`;
                    else if(item.status === 'Present') statusBadge = '<span class="badge bg-success">Đang làm việc</span>';
                    else if(item.status === 'CheckedOut') statusBadge = '<span class="badge bg-primary">Đã về</span>';
                    else statusBadge = `<span class="badge bg-secondary">${item.status || ''}</span>`;

                    html += `<tr>
                        <td>${date}</td>
                        <td>${checkIn}</td>
                        <td>${checkOut}</td>
                        <td>${minutesLate}</td>
                         <td>${deduction}</td>
                        <td>${statusBadge} ${notes}</td>
                    </tr>`;
                });
                html += '</tbody></table></div>';
                list.innerHTML = html;
                
            } catch (e) {
                console.error(e);
                list.innerHTML = '<p class="text-danger text-center py-3">Không thể tải dữ liệu lịch sử.</p>';
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
