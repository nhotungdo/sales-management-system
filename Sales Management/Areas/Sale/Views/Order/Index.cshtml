@model Sales_Management.Areas.Sale.Models.PaginatedList<Sales_Management.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_SaleLayout";
    var statuses = new List<string> { "Draft", "Confirmed", "Paid", "Completed", "Cancelled" };
}

<div class="card border-0 shadow-sm" style="border-radius: 12px;">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="fw-bold mb-0">Danh sách đơn hàng</h5>
    </div>
    <div class="card-body">
        
        <!-- Filter & Search -->
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row g-2">
                <div class="col-md-3">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả trạng thái</option>
                        @foreach(var s in statuses)
                        {
                            if (ViewData["CurrentStatus"] as string == s)
                            {
                                <option value="@s" selected>@s</option>
                            }
                            else
                            {
                                <option value="@s">@s</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-5">
                     <div class="input-group">
                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tìm kiếm theo Mã đơn hoặc Tên khách...">
                        <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="cursor: pointer;" onclick="window.location='@Url.Action("Details", new { id = item.OrderId })'">
                            <td class="ps-4 fw-bold text-primary">#@item.OrderId</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2 text-primary fw-bold" style="width: 35px; height: 35px; font-size: 0.9rem;">
                                        @item.Customer?.FullName?.Substring(0,1)
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="fw-medium">@item.Customer?.FullName</span>
                                        <small class="text-muted">@item.Customer?.PhoneNumber</small>
                                    </div>
                                </div>
                            </td>
                            <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="fw-bold">@item.TotalAmount?.ToString("N0") ₫</td>
                            <td>
                                 @{
                                    var badgeClass = item.Status switch
                                    {
                                        "Completed" => "bg-success",
                                        "Paid" => "bg-success",
                                        "Confirmed" => "bg-info",
                                        "Draft" => "bg-secondary",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-light text-dark"
                                    };
                                }
                                <span class="badge @badgeClass bg-opacity-75 rounded-pill">@item.Status</span>
                            </td>
                             <td>
                                 @{
                                    var paymentClass = item.PaymentStatus == "Paid" ? "text-success" : "text-warning";
                                }
                                <span class="@paymentClass fw-bold"><i class="bi bi-circle-fill small me-1"></i> @item.PaymentStatus</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-light border"><i class="bi bi-eye"></i> Xem</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

           <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted small">
                Trang @Model.PageIndex / @Model.TotalPages
            </div>
            <div>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-status="@ViewData["CurrentStatus"]"
                   class="btn btn-sm btn-outline-secondary @(!Model.HasPreviousPage ? "disabled" : "")">
                    <i class="bi bi-chevron-left"></i>
                </a>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-status="@ViewData["CurrentStatus"]"
                   class="btn btn-sm btn-outline-secondary @(!Model.HasNextPage ? "disabled" : "")">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
