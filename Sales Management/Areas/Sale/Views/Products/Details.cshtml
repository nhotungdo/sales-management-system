@model Sales_Management.Models.Product

<h2 class="mb-4">Product Details</h2>

<div class="row">
    <!-- IMAGE -->
    <div class="col-md-5">
        @if (Model.ProductImages != null && Model.ProductImages.Any())
        {
            <img src="@Model.ProductImages.First().ImageUrl" class="img-fluid rounded shadow" />
        }
        else
        {
            <img src="~/images/no-image.png" class="img-fluid rounded shadow" />
        }
    </div>

    <!-- INFO -->
    <div class="col-md-7">
        <h3>@Model.Name</h3>

        <p class="text-muted">
            @(Model.Category?.Name ?? "Chưa phân loại")
        </p>

        <h4 class="text-danger">
            @((Model.CoinPrice ?? 0).ToString("N0", new System.Globalization.CultureInfo("vi-VN"))) xu
        </h4>
        @if (Model.CoinPrice.HasValue)
        {
            <h5 class="text-warning">
                @(Model.CoinPrice.Value.ToString("N0")) Coins
            </h5>
        }

        <p>
            <strong>Stock:</strong> @Model.StockQuantity
        </p>

        <p>
            <strong>Description:</strong><br />
            @(string.IsNullOrWhiteSpace(Model.Description)
                        ? "Không có mô tả"
                        : Model.Description)
        </p>

        <!-- RATING -->
        <div class="mt-3">
            <strong>Rating:</strong>
            ⭐⭐⭐☆☆ (3.6/5)
        </div>

        <a href="@ViewBag.ReturnUrl" class="btn btn-secondary mt-4">
            Back
        </a>
    </div>
</div>