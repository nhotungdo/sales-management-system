@model Sales_Management.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
    <style>
        body {
            background: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
            min-height: 100vh;
        }
    </style>
}

<div class="auth-wrapper">
    <div class="auth-card animate-fade-in-up">
        <div class="auth-header">
            <div class="icon-box">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h2 class="auth-title">Đăng nhập</h2>
            <p class="auth-subtitle">Chào mừng bạn quay trở lại!</p>
        </div>
        <div class="auth-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="form-floating mb-3 form-floating-custom">
                    <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" autofocus />
                    <label asp-for="Username">Tên đăng nhập</label>
                    <span asp-validation-for="Username" class="text-danger small ms-2"></span>
                </div>

                <div class="form-floating mb-3 form-floating-custom">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                    <label asp-for="Password">Mật khẩu</label>
                    <span asp-validation-for="Password" class="text-danger small ms-2"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-secondary small">Ghi nhớ đăng nhập</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-auth">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Đăng nhập
                </button>

                <div class="auth-links">
                    <span class="text-muted">Chưa có tài khoản?</span> 
                    <a asp-action="Register">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
