@model Sales_Management.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}

<div class="auth-page">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>

    <div class="glass-container">
        <div class="glass-card">
            <div class="brand-logo">
                <i class="bi bi-box-seam-fill me-2"></i>SalesM
            </div>

            <div class="auth-header">
                <h2 class="auth-title">Tạo tài khoản</h2>
                <p class="auth-subtitle">Bắt đầu hành trình của bạn ngay hôm nay</p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating-custom">
                            <label asp-for="Username">Tên đăng nhập</label>
                            <input asp-for="Username" placeholder="user123" autofocus />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                         <div class="form-floating-custom">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating-custom">
                    <label asp-for="FullName">Họ và tên</label>
                    <input asp-for="FullName" placeholder="Nguyễn Văn A" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-floating-custom">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" placeholder="0123456789" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating-custom">
                            <label asp-for="Password">Mật khẩu</label>
                            <input asp-for="Password" type="password" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating-custom">
                            <label asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn-auth mt-2">
                    Tạo tài khoản
                </button>

                <div class="auth-footer">
                    Đã có tài khoản? 
                    <a asp-action="Login">Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
