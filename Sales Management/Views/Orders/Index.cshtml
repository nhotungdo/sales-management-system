@model IEnumerable<Sales_Management.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1>Quản lý đơn hàng</h1>
    </div>
    <div class="col-md-6 text-end">
        <!-- Optional: Add Create Order button if needed -->
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo Mã ĐH hoặc Tên KH" value="@ViewData["CurrentFilter"]">
            </div>
            <div class="col-md-3">
                <select name="statusFilter" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Completed">Hoàn thành</option>
                    <option value="Processing">Đang xử lý</option>
                    <option value="Cancelled">Đã hủy</option>
                    <option value="Draft">Nháp</option>
                    <option value="Paid">Đã thanh toán</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Lọc</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày</th>
                <th>Khách hàng</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Trạng thái thanh toán</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.OrderId</td>
                    <td>@(item.OrderDate.HasValue ? item.OrderDate.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                    <td>@item.Customer?.FullName</td>
                    <td>@(item.TotalAmount.HasValue ? item.TotalAmount.Value.ToString("C") : "")</td>
                    <td>
                        @{
                            string badgeClass = item.Status switch
                            {
                                "Completed" => "bg-success",
                                "Processing" => "bg-primary",
                                "Cancelled" => "bg-danger",
                                "Draft" => "bg-secondary",
                                _ => "bg-info"
                            };
                        }
                        @{
                            string statusDisplay = item.Status switch
                            {
                                "Completed" => "Hoàn thành",
                                "Processing" => "Đang xử lý",
                                "Cancelled" => "Đã hủy",
                                "Draft" => "Nháp",
                                _ => item.Status
                            };
                        }
                        <span class="badge @badgeClass">@statusDisplay</span>
                    </td>
                    <td>
                         <span class="badge @(item.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">@(item.PaymentStatus == "Paid" ? "Đã thanh toán" : "Chưa thanh toán")</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
