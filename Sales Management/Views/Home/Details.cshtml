@model Sales_Management.Models.Product

@{
    ViewData["Title"] = Model.Name;
    var primaryImg = Model.ProductImages.FirstOrDefault(p => p.IsPrimary == true)?.ImageUrl ?? (Model.ProductImages.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png");
    var otherImages = Model.ProductImages.Where(p => p.ImageUrl != primaryImg).ToList();
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">@Model.Category?.Name</a></li>
            <li class="breadcrumb-item active text-dark" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- Product Images -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm mb-3 overflow-hidden rounded-4">
                <img id="mainImage" src="@primaryImg" class="img-fluid w-100 object-fit-cover" style="height: 500px;" alt="@Model.Name">
            </div>
            @if (otherImages.Any() || primaryImg != "/images/no-image.png")
            {
                <div class="d-flex gap-2 overflow-auto pb-2">
                    <img src="@primaryImg" class="rounded-3 cursor-pointer border border-primary opacity-100" style="width: 80px; height: 80px; object-fit: cover;" onclick="changeImage(this.src, this)">
                    @foreach (var img in otherImages)
                    {
                        <img src="@img.ImageUrl" class="rounded-3 cursor-pointer border-0 opacity-50 product-thumb" style="width: 80px; height: 80px; object-fit: cover;" onclick="changeImage(this.src, this)">
                    }
                </div>
            }
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
            <div class="ps-lg-4">
                <div class="mb-3">
                    <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 fw-semibold">
                        <i class="bi bi-tag-fill me-1"></i> @Model.Category?.Name
                    </span>
                    @if (Model.Status == "Active")
                    {
                        <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2 fw-semibold ms-2">
                            <i class="bi bi-check-circle-fill me-1"></i> Còn hàng
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3 py-2 fw-semibold ms-2">
                            <i class="bi bi-x-circle-fill me-1"></i> @Model.Status
                        </span>
                    }
                </div>

                <h1 class="display-5 fw-bold mb-3 text-dark">@Model.Name</h1>

                <div class="mb-4">
                    <div class="d-flex align-items-end gap-2">
                        <h2 class="text-primary fw-bold mb-0 display-6">
                            @((Model.CoinPrice ?? 0).ToString("N0", new System.Globalization.CultureInfo("vi-VN"))) <small class="fs-4">xu</small>
                        </h2>
                        @if (Model.CoinPrice.HasValue)
                        {
                            <span class="text-warning fw-semibold fs-5 mb-1">
                                <i class="bi bi-coin"></i> @Model.CoinPrice.Value.ToString("N0") Coins
                            </span>
                        }
                    </div>
                </div>

                <p class="lead text-muted mb-4">
                    @(Model.Description?.Length > 150 ? Model.Description.Substring(0, 150) + "..." : Model.Description)
                </p>
                
                <!-- Variations (Static for now) -->
                @if (Model.StockQuantity > 0)
                {
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark">Số lượng:</label>
                        <div class="input-group" style="width: 140px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="decrementQty()">-</button>
                            <input type="number" class="form-control text-center border-secondary" id="quantityInput" value="1" min="1" max="@Model.StockQuantity">
                            <button class="btn btn-outline-secondary" type="button" onclick="incrementQty()">+</button>
                        </div>
                        <div class="form-text mt-2">Còn @Model.StockQuantity sản phẩm trong kho</div>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button class="btn btn-primary btn-lg rounded-pill px-5 flex-grow-1 shadow-sm hover-elevate">
                            <i class="bi bi-cart-plus me-2"></i> Thêm vào giỏ
                        </button>
                        <button class="btn btn-outline-primary btn-lg rounded-pill px-5 flex-grow-1 hover-elevate">
                            Mua ngay
                        </button>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning rounded-3 mt-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Sản phẩm này hiện đang hết hàng.
                    </div>
                    <button class="btn btn-secondary btn-lg rounded-pill px-5 mt-3 disabled">
                        Hết hàng
                    </button>
                }
                
                <!-- Features List -->
                <div class="row mt-5 g-3">
                    <div class="col-6">
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-truck fs-4 me-3 text-primary"></i>
                            <span>Giao hàng nhanh toàn quốc</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-shield-check fs-4 me-3 text-primary"></i>
                            <span>Bảo hành chính hãng</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-arrow-return-left fs-4 me-3 text-primary"></i>
                            <span>Đổi trả trong 7 ngày</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-headset fs-4 me-3 text-primary"></i>
                            <span>Hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Details Tabs -->
    <div class="row mt-6 pt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                    <ul class="nav nav-tabs card-header-tabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold px-4 py-3" data-bs-toggle="tab" data-bs-target="#description" type="button">Mô tả chi tiết</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold px-4 py-3" data-bs-toggle="tab" data-bs-target="#specs" type="button">Thông số kỹ thuật</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold px-4 py-3" data-bs-toggle="tab" data-bs-target="#reviews" type="button">Đánh giá</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-4 p-lg-5">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="description" role="tabpanel">
                            <h3 class="fw-bold mb-4">Chi tiết sản phẩm</h3>
                            <p class="text-secondary lh-lg">
                                @(string.IsNullOrEmpty(Model.Description) ? "Đang cập nhật mô tả..." : Model.Description)
                            </p>
                        </div>
                        <div class="tab-pane fade" id="specs" role="tabpanel">
                            <table class="table table-striped table-hover rounded-3 overflow-hidden">
                                <tbody>
                                    <tr>
                                        <th class="ps-4" style="width: 30%">Mã sản phẩm</th>
                                        <td>@Model.Code</td>
                                    </tr>
                                    <tr>
                                        <th class="ps-4">Danh mục</th>
                                        <td>@Model.Category?.Name</td>
                                    </tr>
                                    <tr>
                                        <th class="ps-4">Ngày đăng</th>
                                        <td>@Model.CreatedDate?.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="reviews" role="tabpanel">
                            <div class="text-center py-5">
                                <i class="bi bi-chat-square-quote fs-1 text-muted mb-3 opacity-50"></i>
                                <p class="text-muted">Chưa có đánh giá nào cho sản phẩm này.</p>
                                <button class="btn btn-outline-primary rounded-pill">Viết đánh giá đầu tiên</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-elevate {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-elevate:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    .product-thumb:hover {
        opacity: 1 !important;
        border-color: var(--bs-primary) !important;
        border-width: 1px !important;
        border-style: solid !important;
    }
    .cursor-pointer {
        cursor: pointer;
    }
</style>

<script>
    function changeImage(src, element) {
        document.getElementById('mainImage').src = src;
        // Reset opacity of all thumbs
        document.querySelectorAll('.product-thumb').forEach(el => {
            el.classList.add('opacity-50');
            el.classList.remove('border', 'border-primary', 'opacity-100');
        });
        // Highlight current
        if (element.classList.contains('product-thumb')) {
            element.classList.remove('opacity-50');
            element.classList.add('border', 'border-primary', 'opacity-100');
        }
    }

    function incrementQty() {
        var input = document.getElementById('quantityInput');
        var max = parseInt(input.getAttribute('max'));
        var value = parseInt(input.value);
        if (value < max) input.value = value + 1;
    }

    function decrementQty() {
        var input = document.getElementById('quantityInput');
        var value = parseInt(input.value);
        if (value > 1) input.value = value - 1;
    }
</script>
