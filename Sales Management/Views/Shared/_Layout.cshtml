<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sales_Management.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top glass-effect">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-graph-up-arrow"></i> SalesM
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Sales") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Sale" asp-controller="Home" asp-action="Index">Sản phẩm</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Riêng tư</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center gap-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (!User.IsInRole("Admin") && !User.IsInRole("Sales"))
                            {
                                @await Component.InvokeAsync("WalletBalance")
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        @User.Identity.Name?.Substring(0,1).ToUpper()
                                    </div>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg" style="border-radius: 12px;">
                                    <li><h6 class="dropdown-header">@User.FindFirst("FullName")?.Value</h6></li>
                                    <li><span class="dropdown-item-text small text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Hồ sơ</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i> Quản trị</a></li>
                                    }
                                    @if (User.IsInRole("Sales"))
                                    {
                                        <li><a class="dropdown-item" asp-area="Sale" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i> Quản trị</a></li>
                                    }
                                    @if (!User.IsInRole("Admin") && !User.IsInRole("Sales"))
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Wallet" asp-action="Index"><i class="bi bi-wallet2 me-2"></i> Ví của tôi</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-modern btn-sm" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary-modern btn-sm" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content -->
    <main role="main" class="pb-3" style="min-height: 80vh; @(ViewData["HideHeaderSpacer"] == null ? "padding-top: 100px;" : "")">
        @RenderBody()
    </main>

    <!-- Theme Switcher -->
    <partial name="_ThemeSwitcher" />

    <footer class="modern-footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <a href="/" class="footer-brand"><i class="bi bi-graph-up-arrow"></i> SalesM</a>
                    <p class="mb-4">Giải pháp quản lý bán hàng và phát triển doanh nghiệp hiện đại. Trao quyền cho doanh nghiệp của bạn với những thông tin chi tiết dựa trên dữ liệu.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-primary fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-primary fs-5"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-primary fs-5"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-primary fs-5"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 footer-links">
                    <h5>Sản phẩm</h5>
                    <ul>
                        <li><a href="#">Tính năng</a></li>
                        <li><a href="#">Bảng giá</a></li>
                        <li><a href="#">Tài liệu</a></li>
                        <li><a href="#">Phiên bản</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 footer-links">
                    <h5>Công ty</h5>
                    <ul>
                        <li><a href="#">Về chúng tôi</a></li>
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Liên hệ</a></li>
                        <li><a href="#">Đối tác</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-4 mb-4 footer-links">
                    <h5>Bản tin</h5>
                    <p>Đăng ký nhận bản tin để cập nhật những thông tin mới nhất.</p>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Địa chỉ Email" aria-label="Email address">
                        <button class="btn btn-primary-modern" type="button">Đăng ký</button>
                    </div>
                </div>
            </div>
            <div class="border-top pt-4 mt-4 text-center">
                <p>&copy; 2026 Sales_Management. Đã đăng ký bản quyền. <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>