@model Sales_Management.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="container">
    <h1>Chi tiết nhân viên</h1>

    <div class="row">
        <!-- Personal Info -->
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Hồ sơ</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.User?.Avatar))
                        {
                            <img src="@Model.User.Avatar" alt="Avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        }
                        else
                        {
                            <div class="display-1 text-secondary"><i class="bi bi-person-circle"></i></div>
                        }
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">Họ và tên</dt>
                        <dd class="col-sm-8">@Model.User?.FullName</dd>
                        
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.User?.Email</dd>

                        <dt class="col-sm-4">Vai trò</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary">@Model.User?.Role</span></dd>

                        <dt class="col-sm-4">Chức vụ</dt>
                        <dd class="col-sm-8">@Model.Position</dd>

                        <dt class="col-sm-4">Phòng ban</dt>
                        <dd class="col-sm-8">@Model.Department</dd>
                        
                        <dt class="col-sm-4">Lương</dt>
                        <dd class="col-sm-8">@(Model.BasicSalary.HasValue ? Model.BasicSalary.Value.ToString("C") : "")</dd>
                        
                        <dt class="col-sm-4">Ngày bắt đầu</dt>
                        <dd class="col-sm-8">@Model.StartWorkingDate?.ToShortDateString()</dd>
                    </dl>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning">Sửa</a>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Work History -->
        <div class="col-md-7">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Lịch sử làm việc (Điểm danh)</h5>
                    <button class="btn btn-sm btn-light text-primary">Xuất báo cáo</button>
                </div>
                <div class="card-body">
                    @if (Model.TimeAttendances != null && Model.TimeAttendances.Any())
                    {
                        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Ngày</th>
                                        <th>Giờ vào</th>
                                        <th>Giờ ra</th>
                                        <th>Số giờ</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attn in Model.TimeAttendances.OrderByDescending(t => t.Date))
                                    {
                                        <tr>
                                            <td>@attn.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@(attn.CheckInTime.HasValue ? attn.CheckInTime.Value.ToString("HH:mm") : "-")</td>
                                            <td>@(attn.CheckOutTime.HasValue ? attn.CheckOutTime.Value.ToString("HH:mm") : "-")</td>
                                            <td>
                                                @if(attn.CheckInTime.HasValue && attn.CheckOutTime.HasValue)
                                                {
                                                    var duration = attn.CheckOutTime.Value - attn.CheckInTime.Value;
                                                    @duration.ToString(@"hh\:mm")
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!attn.CheckInTime.HasValue) { <span class="badge bg-danger">Vắng mặt</span> }
                                                else if (!attn.CheckOutTime.HasValue) { <span class="badge bg-warning text-dark">Đang làm việc</span> }
                                                else { <span class="badge bg-success">Hoàn thành</span> }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <!-- Summary -->
                        <div class="mt-3 border-top pt-2">
                             <strong>Tổng số ca:</strong> @Model.TimeAttendances.Count() <br/>
                             @{
                                 double totalHours = 0;
                                 foreach(var t in Model.TimeAttendances.Where(x => x.CheckInTime.HasValue && x.CheckOutTime.HasValue))
                                 {
                                     totalHours += (t.CheckOutTime.Value - t.CheckInTime.Value).TotalHours;
                                 }
                             }
                             <strong>Tổng số giờ làm việc:</strong> @totalHours.ToString("F2")
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Không tìm thấy hồ sơ điểm danh.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
